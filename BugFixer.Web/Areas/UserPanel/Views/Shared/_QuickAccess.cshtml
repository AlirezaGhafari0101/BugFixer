<div class="quick-access layer-style">
    <div class="img-layer">
        <a href="javascript:void(0)" class="change-image"><i class="icon-pencil-edit"></i></a>
        <img src="/images/UsersAvatar/@User.FindFirst("UserAvatar").Value">
    </div>
    <!-- you can use "gold" , "silver , "bronze" for medals -->
    <div class="detail gold">
        <h3> <i class="icon-quality"></i>@User.Identity.Name</h3>
        <span> عضویت : @User.FindFirst("UserJoinDate").Value </span>
        <span> کاربری طلایی با 1563 امتیاز </span>
    </div>
    <ul>
        <li><a href="" data-toggle="tooltip" data-placement="top" title=" داشبورد "><i class="icon-settings"></i></a></li>
        <li><a href="" data-toggle="tooltip" data-placement="top" title=" ویرایش اطلاعات "><i class="icon-profile"></i></a></li>
        <li><a href="" data-toggle="tooltip" data-placement="top" title=" تغییر رمز عبور "><i class="icon-safe"></i></a></li>
        <li><a href="" data-toggle="tooltip" data-placement="top" title=" خروج از حساب "><i class="icon-power-symbol"></i></a></li>
    </ul>
</div>