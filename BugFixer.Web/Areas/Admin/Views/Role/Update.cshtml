@model BugFixer.Application.ViewModels.Role.UpdateRoleVM
@{
    ViewData["Title"] = "بروزرسانی نقش";
}

<section class="content-header">
    <h1>
        عنوان صفحه
        <small>توضیحات</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li class="active">صفحه</li>
        <li class="active">بروزرسانی اطلاعات نقش</li>
    </ol>
</section>



<section class="content">
    <div class="row">

        <div class="col-md-8">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">مثال ساده</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form" asp-area="Admin" asp-controller="Role" asp-action="Update" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="box-body">

                        <div class="input-group">
                            <span class="input-group-addon">#</span>
                            <input type="text" asp-for="Title" class="form-control" placeholder="عنوان نقش">
                        </div>
                        <span asp-validation-for="Title" class="text-danger"></span>




                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">بروزرسانی </button>
                    </div>
                </form>
            </div>
            <!-- /.box -->



        </div>

    </div>

</section>

